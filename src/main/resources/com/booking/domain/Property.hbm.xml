<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.booking.domain.Property" table="USER">
        <id name="id" type="long" column="ID_PROPERTY">
            <generator class="identity" />
        </id>

        <property name="venueName" type="string">
            <column name="VENUE_NAME" />
        </property>

        <component name="address" class="com.booking.domain.Address">
            <property name="addressLine1" access="field">
                <column name="ADDRESS_LINE_1" />
            </property>
            <property name="addressLine2">
                <column name="ADDRESS_LINE_2" />
            </property>
            <property name="city" access="field">
                <column name="CITY" />
            </property>
            <property name="state">
                <column name="STATE" />
            </property>
            <property name="postalCode">
                <column name="POSTAL_CODE" />
            </property>
        </component>

    </class>
</hibernate-mapping>